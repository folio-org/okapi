{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "ModuleDescriptor",
  "type": "object",
  "properties": {
    "id": {"type": "string"},
    "name": {"type": "string"},
    "tags" : {"type" : ["array", "null"],
      "items" : {"type": "string"}
    },
    "provides" : {
      "type": ["array", "null"],
      "items" : {
        "type" : "object",
        "properties" : {
          "id" : {"type": "string"},
          "version" : {"type": "string"}
        }
      }
    },
    "requires" : {
      "type": ["array", "null"],
      "items" : {
        "type" : "object",
        "properties" : {
          "id" : {"type": "string"},
          "version" : {"type": "string"}
        }
      }
    },
    "routingEntries": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "methods": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "path": {"type": "string"},
          "level": {"type": "string"},
          "type": {"type": "string"},
          "permissionsRequired": {
            "type": ["array","null"],
            "items": {
              "type": "string"
            }
          },
          "permissionsDesired": {
            "type": ["array","null"],
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "uiDescriptor": {
      "$ref": "UiModuleDescriptor.json"
    }
  },
  "required": ["id", "name", "routingEntries"]
}
